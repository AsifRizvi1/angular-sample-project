pipeline {
    agent any
    stages {
        stage('Install') {
            steps {
                sh 'npm install'
            }
        }
	    stage('Test') {
		    when {
			     expression {
				    return params.skip_test == 'true'
				}
			}
            steps {
                sh 'docker build -t angular-test .'
		        sh 'docker run --rm angular-test'
            }
        }
        stage('Run') {
            steps {
                sh './start.sh'
            }
        }
    }
}
